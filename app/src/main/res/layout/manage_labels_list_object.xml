<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="[Label Name]"
        android:textSize="@dimen/label_textsize"
        android:textAllCaps="true"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/label_textView" />

    <ImageButton
        android:id="@+id/delete_label_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="@+id/label_textView"
        app:layout_constraintBottom_toBottomOf="@+id/label_textView"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_task_cancelled"
        android:background="@android:color/transparent"
        android:contentDescription="ENTER DESCRIPTION HERE"/>

</android.support.constraint.ConstraintLayout>