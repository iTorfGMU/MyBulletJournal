<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/task_current_status_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_status"
        android:textSize="@dimen/label_textsize"
        android:textColor="@color/textColorAccent"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/details_task_status_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/default_margin"
        tools:src="@drawable/ic_task_scheduled"
        app:layout_constraintLeft_toRightOf="@+id/task_current_status_textview"
        app:layout_constraintTop_toTopOf="@+id/task_current_status_textview"
        app:layout_constraintBottom_toBottomOf="@+id/task_current_status_textview"
        app:layout_constraintHorizontal_bias="0.584"
        android:contentDescription="@string/task_details_status_icon_cd"/>

    <TextView
        android:id="@+id/details_task_status_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        tools:text="[Status]"
        android:textSize="@dimen/label_textsize"
        android:textColor="@color/textColorAccent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/details_task_status_icon"
        app:layout_constraintTop_toTopOf="@+id/details_task_status_icon"
        app:layout_constraintBottom_toBottomOf="@+id/details_task_status_icon"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/task_details_date_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_padding"
        android:text="@string/task_date"
        android:textSize="@dimen/label_textsize"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/task_current_status_textview"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/task_details_date_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Task's Date"
        android:textColorHint="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="@dimen/label_textsize"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_padding"
        app:layout_constraintLeft_toRightOf="@+id/task_details_date_label_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/task_details_date_label_textview"
        app:layout_constraintBottom_toBottomOf="@+id/task_details_date_label_textview"/>


    <TextView
        android:id="@+id/task_details_type_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_padding"
        android:text="@string/task_time"
        android:textSize="@dimen/label_textsize"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/task_details_date_label_textview"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/task_details_type_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Task's Type"
        android:textColorHint="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="@dimen/label_textsize"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_padding"
        app:layout_constraintLeft_toRightOf="@+id/task_details_type_label_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/task_details_type_label_textview"
        app:layout_constraintBottom_toBottomOf="@+id/task_details_type_label_textview"/>

    <TextView
        android:id="@+id/task_details_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_padding"
        android:text="@string/task_label"
        android:textSize="@dimen/label_textsize"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/task_details_type_label_textview"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/task_details_label_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Task's Label"
        android:textColorHint="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="@dimen/label_textsize"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_padding"
        app:layout_constraintLeft_toRightOf="@+id/task_details_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/task_details_label"
        app:layout_constraintBottom_toBottomOf="@+id/task_details_label"/>

    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorAccentLight"
        android:text="@string/task_details_button_text"
        android:textSize="@dimen/label_textsize"
        android:textColor="@color/textColorAccent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>