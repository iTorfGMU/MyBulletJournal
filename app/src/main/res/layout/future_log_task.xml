<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/future_log_task_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:src="@drawable/ic_task_scheduled"
        android:layout_gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/future_log_task_divider"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/future_log_task_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_textsize"
        android:textColor="@android:color/black"
        tools:text="Task 1"
        android:padding="@dimen/default_padding"
        android:layout_margin="@dimen/default_margin"
        android:layout_gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/future_log_task_icon"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/future_log_task_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_textsize"
        android:textColor="@color/colorPrimary"
        tools:text="[Task Date]"
        android:padding="@dimen/default_padding"
        android:layout_margin="@dimen/default_margin"
        android:layout_gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/future_log_task_name"
        app:layout_constraintLeft_toRightOf="@+id/future_log_task_icon"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/future_log_task_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorAccentLight"
        app:layout_constraintTop_toBottomOf="@+id/future_log_task_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/default_margin"/>


    <TextView
        android:id="@+id/date_header_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        android:textSize="@dimen/default_textsize"
        android:textColor="@color/textColorAccentDark"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="November 2017"
        android:background="@color/colorAccentDark"
        android:visibility="gone"/>


</android.support.constraint.ConstraintLayout>